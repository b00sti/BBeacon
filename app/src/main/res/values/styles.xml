<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MainWithoutActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewLightSmall">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="TextViewLightNormal">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewLightLarge">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_22sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--Note! using dp than sp is done on purpose to avoid resize text in fixed layouts-->
    <style name="CollapsingTitle">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewLightSmallFixed">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/size_12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="TextViewLightNormalFixed">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewLightLargeFixed">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/size_24dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--End Note!-->

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchVertical" parent="Match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHorizontal" parent="Match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapVertical" parent="Wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapHorizontal" parent="Wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWidthVertical" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHeightVertical" parent="MatchHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidthHorizontal" parent="MatchWidth">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchHeightHorizontal" parent="MatchHeight">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewLightNormalWrap" parent="Wrap">
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/font_18sp</item>
    </style>

    <style name="TextViewMediumNormalMatchWidth" parent="MatchWidth">
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewMediumNormalFixed" parent="TextViewLightNormalFixed">
        <item name="android:textColor">@color/colorMediumText</item>
    </style>

    <style name="DayOfWeek">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_16dp</item>
    </style>

</resources>
