<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topTopHeaderRL"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorPrimary900"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/tempValueTV"
                style="@style/TextViewLightNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="@dimen/size_8dp"
                android:text="17"
                android:textSize="70sp"/>

            <TextView
                android:id="@+id/tempUnitTV"
                style="@style/TextViewLightNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:maxLines="1"
                android:padding="@dimen/size_8dp"
                android:text="\u2103"
                android:textSize="34sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pressureLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pressureIV"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/weather2_drawable"/>

                <TextView
                    android:id="@+id/pressureTV"
                    style="@style/TextViewLightNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_8dp"
                    android:text="1020 hPa"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/humidityLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/humidityIV"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/weather1_drawable"/>

                <TextView
                    android:id="@+id/humidityTV"
                    style="@style/TextViewLightNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView"
                    android:padding="@dimen/size_8dp"
                    android:text="80 %"
                    android:textSize="18sp"/>/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/windLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/windIV"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/weather3_drawable"/>

                <TextView
                    android:id="@+id/windTV"
                    style="@style/TextViewLightNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_8dp"
                    android:text="1.5 m/s"
                    android:textSize="18sp"/>/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/bottomTopHeaderFL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.1"
        >

        <LinearLayout
            android:id="@+id/bottomTopHeaderLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Krowodrza"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_18sp"
                />

        </LinearLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>