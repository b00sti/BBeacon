<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

    <!-- TODO TO REFACTOR -->

    <RelativeLayout
        android:id="@+id/topTopHeaderRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tempValueTV"
                style="@style/TextViewLightNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="@dimen/size_8dp"
                android:text="@string/dash"
                android:textSize="70dp"/>

            <TextView
                android:id="@+id/tempUnitTV"
                style="@style/TextViewLightNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:maxLines="1"
                android:padding="@dimen/size_8dp"
                android:text="@string/celsjus"
                android:textSize="25dp"/>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleToolbarIconIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/weather1"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.5"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/topTopHeaderRL"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pressureLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pressureIV"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/weather2_drawable"/>

            <TextView
                android:id="@+id/pressureTV"
                style="@style/TextViewLightNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_8dp"
                android:textSize="12dp"
                tools:text="1020 hPa"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/humidityLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/humidityIV"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/weather1_drawable"/>

            <TextView
                android:id="@+id/humidityTV"
                style="@style/TextViewLightNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView"
                android:padding="@dimen/size_8dp"
                android:textSize="12dp"
                tools:text="80 %"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/windLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/windIV"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/weather3_drawable"/>

            <TextView
                android:id="@+id/windTV"
                style="@style/TextViewLightNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_8dp"
                android:textSize="12dp"
                tools:text="1.5 m/s"/>/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>