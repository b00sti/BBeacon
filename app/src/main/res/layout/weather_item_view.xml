<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/sidebar"
                android:layout_width="@dimen/size_4dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/colorAccent">

            </View>

            <LinearLayout
                android:id="@+id/topLayoutLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sidebar"
                android:background="@color/colorAccent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/layout_item_demo_title"
                        style="@style/TextViewLightNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/moreIV"
                        android:gravity="center"
                        android:padding="@dimen/size_8dp"
                        android:text="Work"/>

                    <ImageView
                        android:id="@+id/moreIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/size_8dp"
                        android:src="@drawable/ic_more_vert_white_24dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topLayoutLL"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_toRightOf="@+id/sidebar"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tempValueTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/size_8dp"
                    android:text="17"
                    android:textSize="50sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/pressureLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pressureIV"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/weather2_drawable"/>

                        <TextView
                            android:id="@+id/pressureTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imageView"
                            android:padding="@dimen/size_8dp"
                            android:text="1020 hPa"
                            android:textSize="18sp"/>/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/humidityLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/humidityIV"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/weather1_drawable"/>

                        <TextView
                            android:id="@+id/humidityTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imageView"
                            android:padding="@dimen/size_8dp"
                            android:text="80 %"
                            android:textSize="18sp"/>/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/messageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeLL"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/sidebar"
                android:drawableLeft="@drawable/ic_description_grey_900_24dp"
                android:drawablePadding="@dimen/size_8dp"
                android:drawableRight="@drawable/ic_more_vert_black_24dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="@dimen/size_12dp"
                android:text="Your flowers are watered?"
                android:textSize="@dimen/font_16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/messageTV">

                <include
                    android:id="@+id/chart_toolbar"
                    layout="@layout/card_toolbar"/>

                <com.db.chart.view.LineChartView
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/chart_toolbar"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>