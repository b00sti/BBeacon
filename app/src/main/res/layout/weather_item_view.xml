<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/sidebar"
                android:layout_width="@dimen/size_4dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/colorAccent">

            </View>

            <LinearLayout
                android:id="@+id/topLayoutLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sidebar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/layout_item_demo_title"
                        style="@style/TextViewLightNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/moreIV"
                        android:gravity="center"
                        android:padding="@dimen/size_8dp"
                        android:text="Work"/>

                    <ImageView
                        android:id="@+id/moreIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/size_8dp"
                        android:src="@drawable/ic_more_vert_white_24dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topLayoutLL"
                android:layout_toRightOf="@+id/sidebar"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/timeTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/size_8dp"
                    android:text="17"
                    android:textSize="50sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pressureTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_4dp"
                        android:text="1020 hPa"
                        android:textSize="@dimen/font_26sp"/>

                    <TextView
                        android:id="@+id/humidityTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_4dp"
                        android:text="80 %"
                        android:textSize="@dimen/font_26sp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/daysTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeLL"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/sidebar"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/size_12dp"
                android:text="Your flowers are watered?"
                android:textSize="@dimen/font_16sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>