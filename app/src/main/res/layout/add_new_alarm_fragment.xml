<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerLL"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/selectedTimeTV"
            style="@style/TextViewLightLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/size_8dp"
            android:text="16:09"
            android:textSize="100sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="@dimen/size_32dp"
            android:paddingStart="@dimen/size_32dp">

            <com.example.b00sti.bbeacon.utils.SwitchButton
                android:id="@+id/switchSB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/size_48dp"
                android:layout_marginStart="@dimen/size_48dp"
                app:sb_checked_color="@color/colorAccent"
                app:sb_enable_effect="true"
                app:sb_shadow_effect="true"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLL"
        android:layout_below="@+id/headerLL"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/daysTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeLL"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/sidebar"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/size_12dp"
            android:text="MON   TUE   WED   THU   FRI   SAT   SUN"
            android:textSize="@dimen/font_22sp"/>

        <AutoCompleteTextView
            android:id="@+id/titleET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_12dp"
            android:hint="Title"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/selectBeaconTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_12dp"
            android:drawableLeft="@drawable/ic_cast_connected_green_500_36dp"
            android:drawablePadding="@dimen/size_8dp"
            android:gravity="center"
            android:text="Beacon: Keys"
            android:textSize="@dimen/font_18sp"/>

        <TextView
            android:id="@+id/timeToNextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_12dp"
            android:drawableLeft="@drawable/ic_timelapse_green_500_36dp"
            android:drawablePadding="@dimen/size_8dp"
            android:gravity="center"
            android:text="Time to alarm: 10 h 15 min"
            android:textSize="@dimen/font_18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1.0">

        <ImageView
            android:id="@+id/cancelIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_clear_red_500_36dp"/>

        <ImageView
            android:id="@+id/doneIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_done_green_500_36dp"/>

    </LinearLayout>

</RelativeLayout>