<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerLL"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_2dp"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        android:paddingTop="@dimen/size_8dp">

        <LinearLayout
            android:id="@+id/timeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.5"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tempValueTV"
                    style="@style/TextViewLightNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="17"
                    android:textSize="100sp"/>

                <TextView
                    android:id="@+id/tempUnitTV"
                    style="@style/TextViewLightNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:maxLines="1"
                    android:padding="@dimen/size_8dp"
                    android:text="\u2103"
                    android:textSize="44sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/size_4dp">

                <LinearLayout
                    android:id="@+id/pressureLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_4dp">

                    <ImageView
                        android:id="@+id/pressureIV"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/weather2_drawable"/>

                    <TextView
                        android:id="@+id/pressureTV"
                        style="@style/TextViewLightLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_8dp"
                        android:text="1020 hPa"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/humidityLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_4dp">

                    <ImageView
                        android:id="@+id/humidityIV"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/weather1_drawable"/>

                    <TextView
                        android:id="@+id/humidityTV"
                        style="@style/TextViewLightLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView"
                        android:padding="@dimen/size_8dp"
                        android:text="80 %"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/messageTV"
            style="@style/TextViewLightLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeLL"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/size_16dp"
            android:layout_toRightOf="@+id/sidebar"
            android:drawableLeft="@drawable/ic_description_green_500_24dp"
            android:drawablePadding="@dimen/size_8dp"
            android:drawableRight="@drawable/ic_priority_high_red_900_24dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="@dimen/size_8dp"
            android:paddingLeft="@dimen/size_12dp"
            android:paddingRight="@dimen/size_12dp"
            android:text="Your flowers are watered?"
            android:textSize="@dimen/font_16sp"/>

        <TextView
            android:id="@+id/whenTV"
            style="@style/TextViewLightLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeLL"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/sidebar"
            android:drawableLeft="@drawable/ic_notifications_active_green_500_24dp"
            android:drawablePadding="@dimen/size_8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="@dimen/size_12dp"
            android:paddingLeft="@dimen/size_12dp"
            android:paddingRight="@dimen/size_12dp"
            android:paddingTop="@dimen/size_8dp"
            android:text="Notify if pressure less than 1000 hPa"
            android:textSize="@dimen/font_16sp"/>

        <TextView
            style="@style/TextViewLightLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Flowers"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLL"
        android:layout_below="@+id/headerLL"
        android:orientation="vertical"
        android:padding="@dimen/size_8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/messageTV">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_8dp">

                <include
                    android:id="@+id/chart_toolbar"
                    layout="@layout/card_toolbar"/>

                <com.db.chart.view.LineChartView
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/chart_toolbar"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/messageTV">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_8dp">

                <include
                    android:id="@+id/chart_toolbar"
                    layout="@layout/card_toolbar"/>

                <com.db.chart.view.LineChartView
                    android:id="@+id/chart2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/chart_toolbar"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/messageTV">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_4dp">

                <include
                    android:id="@+id/chart_toolbar"
                    layout="@layout/card_toolbar"/>

                <com.db.chart.view.LineChartView
                    android:id="@+id/chart3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/chart_toolbar"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_8dp"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        android:paddingTop="@dimen/size_2dp"
        android:weightSum="1.0">

        <ImageView
            android:id="@+id/cancelIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_clear_red_500_36dp"/>

        <ImageView
            android:id="@+id/doneIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_done_green_500_36dp"/>

    </LinearLayout>

</RelativeLayout>